<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.yogiraj.myappportfolio.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#ede2e2"
    android:contextClickable="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:id="@+id/textView"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spotify"
        android:layout_marginTop="19dp"
        android:height="@dimen/button_vertical"
        android:width="@dimen/button_horizontal"
        android:textColor="#ffffff"
        android:background="#F08C35"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="displayToast"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/scoreAppButton"
        android:height="@dimen/button_vertical"
        android:width="@dimen/button_horizontal"
        android:textColor="#ffffff"
        android:background="#F08C35"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/spotify"
        android:layout_alignLeft="@+id/spotify"
        android:layout_alignStart="@+id/spotify"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/libraryAppButton"
        android:layout_marginTop="19dp"
        android:height="@dimen/button_vertical"
        android:width="@dimen/button_horizontal"
        android:textColor="#ffffff"
        android:background="#F08C35"
        android:layout_below="@+id/scoreAppButton"
        android:layout_alignLeft="@+id/scoreAppButton"
        android:layout_alignStart="@+id/scoreAppButton"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/buildButton"
        android:height="@dimen/button_vertical"
        android:width="@dimen/button_horizontal"
        android:textColor="#ffffff"
        android:background="#F08C35"
        android:layout_below="@+id/libraryAppButton"
        android:layout_alignLeft="@+id/libraryAppButton"
        android:layout_alignStart="@+id/libraryAppButton"
        android:layout_marginTop="18dp"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACON READER"
        android:id="@+id/baconReaderButton"
        android:height="@dimen/button_vertical"
        android:width="@dimen/button_horizontal"
        android:textColor="#ffffff"
        android:background="#F08C35"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/buildButton"
        android:layout_alignLeft="@+id/buildButton"
        android:layout_alignStart="@+id/buildButton"
        android:onClick="displayToast"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE:MY OWN APP"
        android:id="@+id/capstoneButton"
        android:height="@dimen/button_vertical"
        android:width="@dimen/button_horizontal"
        android:textColor="#ffffff"
        android:background="#f03561"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/baconReaderButton"
        android:layout_alignLeft="@+id/baconReaderButton"
        android:layout_alignStart="@+id/baconReaderButton"
        android:onClick="displayToast"/>


</RelativeLayout>
